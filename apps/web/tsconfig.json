{
  "extends": "@zenncore/web/typescript",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "incremental": true,
    "paths": {
      "@/*": ["./src/*"],
      "@/public/*": ["./public/*"],
      "@/payload/config": ["./payload.config.ts"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "declarations/**/*.d.ts",
    "src/app/(payload)/admin/importMap.js"
  ]
}
