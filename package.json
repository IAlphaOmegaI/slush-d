{
  "name": "zenncore",
  "private": true,
  "author": {
    "name": "zennit",
    "email": "zennit.dev@gmail.com",
    "url": "https://www.zennit.dev/"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=./apps/web...",
    "dev:mobile": "turbo run dev --filter=./apps/mobile...",
    "dev:packages": "turbo dev --filter=@zenncore/*",
    "lint": "biome check --write",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@turbo/gen": "^2.5.8",
    "turbo": "^2.5.8"
  },
  "engines": {
    "node": ">=22"
  },
  "packageManager": "bun@1.2.22",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*",
      "packages/shared/*",
      "packages/shared/config/*"
    ],
    "catalog": {
      "@types/node": "^22.18.6",
      "@types/react": "^19.1.14",
      "react": ">=19.1.1",
      "react-hook-form": ">=7.63.0",
      "tailwindcss": "^4.1.13",
      "tsdown": "^0.15.5",
      "typescript": "^5.9.2"
    }
  }
}
